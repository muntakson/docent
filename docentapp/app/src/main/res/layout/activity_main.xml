<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.MainActivity">

    <!-- Settings Button (Hamburger Menu) -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_menu"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/text_primary" />

    <!-- Status indicator -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/status_idle"
        android:textColor="@color/status_idle"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Face Container - Horizontal Layout -->
    <LinearLayout
        android:id="@+id/faceContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSettings">

        <!-- Left Eye -->
        <com.docent.bot.ui.EyeballView
            android:id="@+id/leftEye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="16dp" />

        <!-- Mouth -->
        <com.docent.bot.ui.MouthView
            android:id="@+id/mouth"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.8"
            android:layout_gravity="center_vertical" />

        <!-- Right Eye -->
        <com.docent.bot.ui.EyeballView
            android:id="@+id/rightEye"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Button Container -->
    <FrameLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStart"
            style="@style/StartButton"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="@string/start_button"
            android:textSize="32sp"
            android:visibility="visible" />

        <!-- Continue Button (안내시작) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            style="@style/ContinueButton"
            android:layout_width="280dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="@string/continue_button"
            android:textSize="28sp"
            android:visibility="gone" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/button_stop"
            android:text="@string/stop_button"
            android:textSize="24sp"
            android:visibility="gone"
            app:cornerRadius="16dp" />

    </FrameLayout>

    <!-- Speech Text Overlay -->
    <TextView
        android:id="@+id/tvSpeechText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/bg_speech_bubble"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="안녕! 나는 서희봇이야!"
        tools:visibility="visible" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
