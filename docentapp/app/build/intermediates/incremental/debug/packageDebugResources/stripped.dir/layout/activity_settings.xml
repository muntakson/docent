<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    tools:context=".ui.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/cancel"
                android:src="@drawable/ic_back"
                app:tint="@color/text_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/settings_title"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- AMR Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="AMR 설정"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/amr_ip_title"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAmrIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/backend_url_title"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBackendUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:textColor="@color/text_primary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Connection Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/viewAmrStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_status_dot" />

            <TextView
                android:id="@+id/tvAmrStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="AMR 연결 확인 중..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTestConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연결 테스트"
                style="@style/Widget.Material3.Button.TonalButton" />

        </LinearLayout>

        <!-- Projector Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/projector_section"
            android:textColor="@color/secondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Find Projector Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFindProjector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/find_projector"
            app:icon="@drawable/ic_projector"
            app:iconGravity="start"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Selected Projector -->
        <TextView
            android:id="@+id/tvSelectedProjector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="선택된 프로젝터 없음"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Video Upload Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVideoUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/video_upload"
            app:icon="@drawable/ic_video"
            app:iconGravity="start"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Selected Video -->
        <TextView
            android:id="@+id/tvSelectedVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="선택된 동영상 없음"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Stream Video Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStreamVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/stream_video"
            android:enabled="false"
            app:icon="@drawable/ic_play"
            app:iconGravity="start"
            style="@style/Widget.Material3.Button" />

        <!-- Stop Stream Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStopStream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/stop_stream"
            android:visibility="gone"
            android:backgroundTint="@color/button_stop"
            app:icon="@drawable/ic_stop"
            app:iconGravity="start" />

        <!-- Streaming Status -->
        <TextView
            android:id="@+id/tvStreamingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textColor="@color/status_active"
            android:textSize="14sp" />

        <!-- Device List -->
        <TextView
            android:id="@+id/tvDeviceListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="발견된 프로젝터"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/save"
            android:textSize="18sp"
            app:cornerRadius="12dp" />

    </LinearLayout>

</ScrollView>
